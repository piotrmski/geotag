{
  "name": "geotag",
  "productName": "Geotag",
  "version": "1.0.2",
  "description": "Aplikacja umożliwiająca modyfikację i przegląd położenia geograficznego w danych EXIF w plikach JPEG i TIFF",
  "author": {
    "name": "Piotr Marczyński",
    "email": "piotrmski@gmail.com"
  },
  "contributors": [
    "Paweł Szwajnoch",
    "Przemysław Wylężek"
  ],
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron-dev": "electron index-dev.js",
    "run-dev": "npm-run-all --parallel serve electron-dev",
    "run-prod": "electron index.js",
    "build-installer": "npm run build && copyfiles -f ./src/assets/builder-icons/*.* ./dist && electron-builder"
  },
  "main": "index.js",
  "dependencies": {
    "copyfiles": "^2.2.0",
    "core-js": "^3.6.4",
    "exiftool-vendored": "^11.0.0",
    "jimp": "^0.10.1",
    "leaflet": "^1.6.0",
    "vue": "^2.6.11",
    "vue2-leaflet": "^2.5.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-service": "~4.2.0",
    "babel-eslint": "^10.0.3",
    "electron": "^18.3.7",
    "electron-builder": "^22.4.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "npm-run-all": "^4.1.5",
    "vue-template-compiler": "^2.6.11"
  },
  "build": {
    "appId": "geotag",
    "linux": {
      "category": "Utilities",
      "target": [
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "dist/icon.ico"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "exiftool"
      ]
    },
    "fileAssociations": [
      {
        "name": "JPEG image",
        "ext": "JPEG"
      },
      {
        "name": "JPG image",
        "ext": "JPG"
      },
      {
        "name": "TIFF image",
        "ext": "TIFF"
      },
      {
        "name": "TIF image",
        "ext": "TIF"
      }
    ],
    "files": [
      "index.js",
      "bootstrap.js",
      "dist"
    ],
    "directories": {
      "output": "build",
      "buildResources": "dist"
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "Electron 8.1.1"
  ]
}
